{% extends "layout.html.twig" %}
{% block content %}
<div id="third-option">
    <div class="container">
        <div class="row header">
            <div class="col-md-12">
                <h3>Bespaar door meerdere uren tegelijk te reserveren.</h3>
                <p>Er hoeven geen reiskosten betaald te worden.</p>
            </div>
        </div>

        <div class="row charts">
            <div class="col-md-12">
                {% for package in packages %}
                <div class="chart {{ package['class'] }}">
                    <div class="plan-name">{{ package['name'] }}</div>
                    <div class="quantity">
                        <span class="dollar">&euro;</span>
                        <span class="price">{{ package['price'] }}</span>
                    </div>
                    <div class="specs">
                        <div class="spec">
                            <span class="variable">{{ package['hours'] }}</span>
                            uren
                        </div>
                        <div class="spec">
                            <span class="variable">&euro;{{ package['price'] / package['hours'] }}</span>
                            per uur
                        </div>
                        <div class="spec">
                            <span class="variable">&euro;{{ package['hours'] * default_rate - package['price']  }}</span>
                            korting
                        </div>
                    </div>
                    <a class="btn-signup button-clear" href="signup.html">
                        <span>Start free trial</span>
                    </a>
                </div>
                {% endfor %}
                <div class="basic-plan">
                    <div class="plan-name">Losse les</div>
                    <div class="quantity">
                        <span class="dollar">&euro;</span>
                        <span class="price">{{ default_rate }}</span>
                    </div>
                    <p class="description">
                        Wil je snel 1 of 2 lessen om voor een proefwerk voor te bereiden?
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
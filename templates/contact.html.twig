{% extends "layout.html.twig" %}
{% block content %}

    {% if flash['info'] %}
        <div class="container">
            <div class="alert alert-success" role="alert">
                {{ flash['info'] | raw }}
            </div>
        </div>
    {% endif %}
    {% if flash['error'] %}
        <div class="container">
            <div class="alert alert-danger" role="alert">
                {{ flash['error'] | raw }}
            </div>
        </div>
    {% endif %}

    <div id="info">
        <div class="container">
            <div class="row">
                <div class="col-md-8 message">
                    <h3>Send us a message</h3>
                    <p>
                        -
					</p>
					<form role="form" id="contact-form" method="post">
						<div class="form-group">
				    		<label for="name_parent">Naam ouder(s)</label>
				    		<input type="text" name="name_parent" id="name_parent" class="form-control" required>
				  		</div>
                        <div class="form-group">
                            <label for="name_student">Naam leerling</label>
                            <input type="text" name="name_student" id="name_student" class="form-control" required>
                        </div>
				  		<div class="form-group">
				    		<label for="email">E-mail adres</label>
				    		<input type="email" name="email" id="email" class="form-control" required>
				  		</div>
				  		<div class="form-group">
				    		<label for="phone">Telefoon nummer</label>
				    		<input type="text" name="phone" id="phone" class="form-control">
				  		</div>
                        <div class="form-group">
                            <label for="level">Opleiding</label>
                            <select name="level" id="level" class="form-control">
                                <option>VMBO</option>
                                <option>HAVO</option>
                                <option selected>VWO</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="year">Jaar</label>
                            <select name="year" id="year" class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option selected>4</option>
                                <option>5</option>
                                <option>6</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="level">Vak</label>
                            <select name="level" id="level" class="form-control">
                                <option selected>Wiskunde A</option>
                                <option>Wiskunde B</option>
                                <option>Wiskunde C</option>
                                <option>Wiskunde D</option>
                            </select>
                        </div>
				  		<div class="form-group">
				    		<label for="message">Uw vraag/bericht</label>
				    		<textarea name="message" id="message" class="form-control" rows="6" required></textarea>
				  		</div>
				  		<div class="submit">
				  			<input type="submit" class="button button-small" value="Email us">
				  		</div>
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}